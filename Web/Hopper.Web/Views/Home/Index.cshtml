@model IndexViewModel;
@using Hopper.Common
@using Hopper.Web.ViewModels.Home
@{
    this.ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .event-card {
            margin-top: 50px;
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .event-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .event-details {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .event-description {
            font-size: 1.2rem;
            line-height: 1.6;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="event-card">
                    <div class="event-description">
                        <h1 class="text-center">Welcome to Hopper!</h1>

                        <h2 class="text-center">Find your practice </h2>
                        <div class="text-center">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">All Practices:@Model.AllPractices</li>
                                <li class="list-group-item">Football Practices:@Model.FootballPractices</li>
                                <li class="list-group-item">Basketball Practices:@Model.BasketballPractices</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>


