@using Hopper.Web.ViewModels.Create
@model CreateViewModel
@{
    this.ViewData["Title"] = "Create";
    var sports = this.Model.AllSports.Select(x => new SelectListItem(x.Value, x.Key));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .event-card {
            margin-top: 50px;
            margin-bottom: 50px;
            padding: 90px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .event-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .event-details {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .event-description {
            font-size: 1.2rem;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="event-card">
                    <div class="event-description">
                        <h1>@this.ViewData["Title"]</h1>
                        <div >
                            <form method="post">
                                <div class="form-group mb-3">
                                    <label asp-for="AllSports"></label>
                                    <select class="form-control" asp-for="AllSportsId" asp-items="sports"></select>
                                    <span asp-validation-for="AllSportsId"></span>
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="Title" class="form-control-text">Title</span>
                                    <input asp-for="Title" type="text" class="form-control">
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="Location" class="form-control-text">Location</span>
                                    <input asp-for="Location" type="text" class="form-control">
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="Date" class="form-controll">Date</span>
                                    <input asp-for="Date" type="date" class="form-control">
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="Time" class="form-controll">Time</span>
                                    <input asp-for="Time" type="time" value="@Model.Time.ToString(@"HH\:mm")" class=" form-control">
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="Description" class="form-control-text">Description</span>
                                    <textarea input asp-for="Description" type="text" class="form-control" style="height: 130px"></textarea>
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="PeopleNeeded" class="form-controll">People Needed</span>
                                    <input asp-for="PeopleNeeded" type="number" class="form-control">
                                </div>
                                <div class="form-group  mb-3">
                                    <span asp-validation-for="PhoneNumber" class="form-controll">Phone Number</span>
                                    <input asp-for="PhoneNumber" type="text" class="form-control">
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="Price" class="form-controll">Price</span>
                                    <input asp-for="Price" type="number" class="form-control">
                                </div>

                                <input type="submit" class="btn btn-primary" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




