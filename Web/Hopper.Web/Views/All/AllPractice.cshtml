@using Hopper.Web.ViewModels.PracticeListViewModel
@model PracticeListViewModel;
@{
    this.ViewData["Title"] = "Workouts";
}


<hr />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workout Sessions</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .workout-card {
            margin-bottom: 30px;
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .workout-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .workout-details {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .custom-link {
            color: #ff6347; 
            text-decoration: none; 
            font-weight: bold; 
            border-bottom: 2px solid transparent; 
            transition: border-color 0.3s, color 0.3s; 
        }

            .custom-link:visited {
                color: #9b59b6; 
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="workout-card">
            
            <div class="col-md-8">
                <h1>@this.ViewData["Title"]</h1>
                @foreach (var workout in Model.Practices)
                {
                    <div >
                        <div class="workout-title"><a class="custom-link" asp-action="ById" asp-route-id="@workout.SportNameId">@workout.Title</a></div>
                        <div class="workout-details">
                            <span>Date: @workout.Date.ToString("MMMM dd, yyyy")</span><br>
                            <span>Time: @workout.Time.ToString("hh:mm tt")</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>


<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @if(!Model.HasPrevPage) {
        <text>disabled</text>
}">
            <a class="page-link" asp-action="AllPractice" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="AllPractice" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only"></span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i < Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="AllPractice" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if(!Model.HasNextPage) {
        <text>disabled</text>
}">
            <a class="page-link" asp-action="AllPractice" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>